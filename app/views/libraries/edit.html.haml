.container
  .row
    .col-5
    .col-2
      %h3 Edit Library
    .col-5
  .row
    .col-4
    .col-4
      = simple_form_for @library do |f|
        = f.input :name
        = f.input :location
        = f.button :submit, 'Edit Library', class: 'btn btn-sm btn-success'
        = link_to 'Back', libraries_path, class: 'btn btn-sm btn-dark'
    .col-4 